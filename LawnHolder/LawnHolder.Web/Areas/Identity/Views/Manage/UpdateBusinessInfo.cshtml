@model LawnHolder.Web.Areas.Identity.Models.ManageViewModels.UpdateBusinessInfoViewModel
@using Syncfusion.EJ2
@{
    ViewData["Title"] = "Update business info";
    Layout = "~/Views/Shared/Layouts/Back/_Layout.cshtml";;
}
@{
    var asyncSettings = new Syncfusion.EJ2.Inputs.UploaderAsyncSettings { SaveUrl = "/Upload/Save", RemoveUrl = "/Upload/Remove" };
}

@await Html.PartialAsync("_StatusMessage", Model.StatusMessage)
<fieldset class="form-fieldset">
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="CompanyName" class="form-label required">Company Name</label>
        <input asp-for="CompanyName" class="form-control" />
        <span class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="form-label required"></label>
        <input asp-for="PhoneNumber" class="form-control" data-mask="(000) 000-0000" data-mask-visible="true" placeholder="(000) 000-0000" autocomplete="on"/>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ServicedAreas" class="form-label required"></label>
        <input asp-for="ServicedAreas" class="form-control" />
        <span class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" />
        <span class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
</fieldset>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
